{{define "title"}} Home {{end}}

{{define "main"}}  
   <h2>Latest Snipet #2</h2>
   {{if .Snippets}}
      <table>
         <tr>
            <th>Title</th>
            <th>Created</th>
            <th>ID</th>
         </tr>
         {{range .Snippets}}
         <tr>
            <td><a href='/snippet/view?id={{.ID}}'>{{.Title}}</a></td>
            <td>{{.Created}}</td>
            <td>{{.ID}}</td>
         </tr>
         {{end}}
      </table>
   {{else}}
      <p> no data </p>
   {{end}}
{{end}}
